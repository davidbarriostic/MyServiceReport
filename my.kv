#: import Factory kivy.factory.Factory
<MyServiceReportApp>:
    MainScreen:

<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Insert your activity:"
            size_hint_y:None
            height:'20dp'
            size_hint_x:1

        GridLayout:
            padding: 5
            size_hint_y:1.70
            cols:2
            rows:5
            Label:
                text: 'Date:'
                text_size: self.size
                font_size:'20dp'
                halign: 'left'
                size_hint_y:None
                height:'60dp'
            TextInput:
                id:report1
                hint_text:'Enter date (DD-MM-YY):'
                multiline: False
                size_hint_y:None
                height:'60dp'
            Label:
                text: 'Publications:'
                text_size: self.size
                font_size:'20dp'
                halign: 'left'
                size_hint_y:None
                height:'60dp'
            TextInput:
                id:report2
                hint_text:''
                multiline: False
                size_hint_y:None
                height:'60dp'
                input_filter:'int'
            Label:
                text: 'Videos:'
                text_size: self.size
                font_size:'20dp'
                halign: 'left'
                size_hint_y:None
                height:'60dp'
            TextInput:
                id:report3
                hint_text:''
                multiline: False
                size_hint_y:None
                height:'60dp'
                input_filter:'int'
            Label:
                text: 'Time:'
                text_size: self.size
                font_size:'20dp'
                halign: 'left'
                size_hint_y:None
                height:'60dp'
            TextInput:
                id:report4
                hint_text:''
                multiline: False
                size_hint_y:None
                height:'60dp'
                hint_text:'Enter time (HH:MM):'
            Label:
                text: 'Return visits:'
                text_size: self.size
                font_size:'20dp'
                halign: 'left'
                size_hint_y:None
                height:'60dp'
            TextInput:
                id:report5
                hint_text:''
                multiline: False
                size_hint_y:None
                height:'60dp'
                input_filter:'int'
        BoxLayout:
            orientation:'vertical'
            padding: 5
            Button:
                size_hint: .2, .2
                text:'Add Activity'
                on_release:root.do_registry_activity(report1.text,report2.text,report3.text,report4.text,report5.text)
            BoxLayout:
                orientation:'vertical'
                Label:
                    text: 'Activity Summary'
                   # on_release: root.activity_summary()
                Label:
                    text:'Videos'
                Label:
                    text:'Publications'
                Label:
                    text:'Time'
                Label:
                    text:'Return visits'
                Label:
                    text:'Bible Study'


<ErrorPopUp>
    auto_dismiss: False
    size_hint: 0.6, 0.4
    pos_hint: {"x":0.2, "top": 0.9}
    title: 'Error'
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        Label:
            text:'Insert data in the correct format!'
            font_size: 24
        Button:
            text: 'Close'
            on_release: root.dismiss()
